package exercises;

public class DinnerClass {
	public static void main(String[] args) {
		FoodClass food1 = new FoodClass("Rice", 0.200);
		FoodClass food2 = new FoodClass("Beans", 0.150);
		FoodClass food3 = new FoodClass("Chicken", 0.320);
		
		PersonClass person1 = new PersonClass("Johnn", 80.0);
		
		System.out.println("Your actual weight is: " + person1.weight + " KGs.");

		person1.eat(food1);
		person1.eat(food2);
		person1.eat(food3);
		
		System.out.printf("After you've eaten %d with %d and %d.", food1, food2, food3);
		
		
	}
}
