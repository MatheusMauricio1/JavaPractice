package exercises;

public class ForChallenge {
	public static void main(String[] args) {
		
		String value = "#";
		for(int i = 1; i <= 5; i++) {
			System.out.println(value);
			value += "#";
		}

		// The challenge is doing the same as before using "for", but without any numeric value as a parameter of repetition
		
		String value2 = "";
		for(; !value2.equals("#####"); value2 +="#") {
			System.out.println(value2);
		}
		
	}
}
